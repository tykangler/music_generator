{
   "train": {
      "log_path": "./logs/train",
      "midi_path": "./data/maestro-v3.0.0",
      "checkpoint_path": "./models/ckpts",
      "val_size": 0.1,
      "test_size": 0.1,
      "batch_size": 32,
      "epochs": 100,
      "velocity_bins": 32,
      "rest_resolution": 32,
      "instruments": ["piano"],
      "inp_len": 1000,
      "tar_len": 50000
   },
   "model": {
      "name": "music-transformer",
      "save_path": "./models",
      "vocab_path": "./models/vocabulary",
      "initial_params": {
         "transformer": {
            "embed_dim": 512,
            "layers": 6,
            "key_dim": 512,
            "value_dim": 512,
            "ffnn_dim": 256,
            "max_relative_pos": 64,
            "dropout_rate": 0.2,
            "kernel_constraint": {
               "class_name": "MaxNorm",
               "config": {
                  "max_value": 2,
                  "axis": 0
               }
            }
         }, 
         "learning_schedule": {
            "dim": 512,
            "warmup_steps": 4000
         },
         "optimizer": {
            "beta_1": 0.9,
            "beta_2": 0.999,
            "epsilon": 1e-7
         },
         "loss": {
            "k": 3
         },
         "metric": {
            "k": 3
         }
      }
   },
   "inference": {
      "log_path": "./logs/inference",
      "max_len": 100
   }
}
